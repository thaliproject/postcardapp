<?xml version='1.0' encoding='utf-8'?>
<widget id="org.thaliproject.postcardapp" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PostCardApp</name>
    <description>
        A sample thali app which demonstrate the basic features.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Thali Project team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-navigation href="http://localhost:5000/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="assets/android/res/drawable-ldpi/icon.png" density="ldpi"/>
        <icon src="assets/android/res/drawable-mdpi/icon.png" density="mdpi"/>
        <icon src="assets/android/res/drawable-hdpi/icon.png" density="hdpi"/>
        <icon src="assets/android/res/drawable-xhdpi/icon.png" density="xhdpi"/>
        <!-- you can use any density that exists in the Android project -->
        <splash src="assets/android/res/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        <splash src="assets/android/res/drawable-land-ldpi/screen.png" density="land-ldpi"/>
        <splash src="assets/android/res/drawable-land-mdpi/screen.png" density="land-mdpi"/>
        <splash src="assets/android/res/drawable-land-xhdpi/screen.png" density="land-xhdpi"/>
        <splash src="assets/android/res/drawable-port-hdpi/screen.png" density="port-hdpi"/>
        <splash src="assets/android/res/drawable-port-ldpi/screen.png" density="port-ldpi"/>
        <splash src="assets/android/res/drawable-port-mdpi/screen.png" density="port-mdpi"/>
        <splash src="assets/android/res/drawable-port-xhdpi/screen.png" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="local" />
        <preference name="EnableViewportScale" value="false" />
        <preference name="KeyboardDisplayRequiresUserAction" value="false" />
        <preference name="SuppressesIncrementalRendering" value="true" />
        <feature name="StatusBar">
    		<param name="ios-package" value="CDVStatusBar" onload="true" />
    	</feature>
        <preference name="StatusBarOverlaysWebview" value="true" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="assets/ios/Resources/icons/icon-60@3x.png" width="180" height="180"/>
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="assets/ios/Resources/icons/icon-60.png" width="60" height="60"/>
        <icon src="assets/ios/Resources/icons/icon-60@2x.png" width="120" height="120"/>
        <!-- iPad -->
        <icon src="assets/ios/Resources/icons/icon-76.png" width="76" height="76"/>
        <icon src="assets/ios/Resources/icons/icon-76@2x.png" width="152" height="152"/>
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="assets/ios/Resources/icons/icon-40.png" width="40" height="40"/>
        <icon src="assets/ios/Resources/icons/icon-40@2x.png" width="80" height="80"/>
        <!-- iPhone / iPod Touch -->
        <icon src="assets/ios/Resources/icons/icon.png" width="57" height="57"/>
        <icon src="assets/ios/Resources/icons/icon@2x.png" width="114" height="114"/>
        <!-- iPad -->
        <icon src="assets/ios/Resources/icons/icon-72.png" width="72" height="72"/>
        <icon src="assets/ios/Resources/icons/icon-72@2x.png" width="144" height="144"/>
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="assets/ios/Resources/icons/icon-small.png" width="29" height="29"/>
        <icon src="assets/ios/Resources/icons/icon-small@2x.png" width="58" height="58"/>
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="assets/ios/Resources/icons/icon-50.png" width="50" height="50"/>
        <icon src="assets/ios/Resources/icons/icon-50@2x.png" width="100" height="100"/>
        <!-- images are determined by width and height. The following are supported -->
        <splash src="assets/ios/Resources/splash/Default~iphone.png" width="320" height="480"/>
        <splash src="assets/ios/Resources/splash/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="assets/ios/Resources/splash/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="assets/ios/Resources/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="assets/ios/Resources/splash/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="assets/ios/Resources/splash/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="assets/ios/Resources/splash/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="assets/ios/Resources/splash/Default-667h.png" width="750" height="1334"/>
        <splash src="assets/ios/Resources/splash/Default-736h.png" width="1242" height="2208"/>
        <splash src="assets/ios/Resources/splash/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>
    <preference name="DisallowOverscroll" value="true" />
</widget>
